<%= form_for [refinery, :people_admin, @person] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @person,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :first_name -%>
    <%= f.text_field :first_name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :last_name -%>
    <%= f.text_field :last_name -%>
  </div>

  <div class='field'>
    <%= f.label :avatar -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :avatar_id,
               :image => @person.avatar,
               :toggle_image_display => false -%>
  </div>

    <div class='field'>
      <%= f.label :big_avatar -%>
      <%= render '/refinery/admin/image_picker',
                 :f => f,
                 :field => :big_avatar_id,
                 :image => @person.big_avatar,
                 :toggle_image_display => false -%>
    </div>

  <div class='field'>
    <%= f.label :short_comment -%>
    <%= f.text_field :short_comment -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:full_comment],
                :object => "people/person" -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.people.admin.people.person'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @person.first_name) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
