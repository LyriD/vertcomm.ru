<% content_for :body_content_title do %>
  <%= @person.first_name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>First Name</h1>
    <p>
      <%=raw @person.first_name %>
    </p>
  </section>
  <section>
    <h1>Last Name</h1>
    <p>
      <%=raw @person.last_name %>
    </p>
  </section>
  <section>
    <h1>Avatar</h1>
    <p>
      <%= image_fu @person.avatar, nil %>
    </p>
  </section>
  <section>
    <h1>Short Comment</h1>
    <p>
      <%=raw @person.short_comment %>
    </p>
  </section>
  <section>
    <h1>Full Comment</h1>
    <p>
      <%=raw @person.full_comment %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="people">
      <% @people.each do |person| %>
        <li>
          <%= link_to person.first_name, refinery.people_person_path(person) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
